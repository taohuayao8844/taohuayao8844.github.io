{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

	"files": {
		"includes": [
			"**/*.{js,jsx,ts,tsx,json,jsonc,css,html,astro}",

			"!**/.wrangler",
			"!**/.astro",
			"!**/dist"
		]
	},

	"formatter": {
		"enabled": true
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},

	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
